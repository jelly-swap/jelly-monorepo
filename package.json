{
    "name": "jelly-monorepo",
    "private": true,
    "devDependencies": {
        "@types/jest": "^26.0.0",
        "@types/node": "^12.12.17",
        "jest": "^25.2.3",
        "lerna": "^3.19.0",
        "ts-jest": "^25.2.1",
        "typescript": "^3.7.3"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "lerna run build",
        "publish": "lerna run tsc && lerna publish",
        "clean": "lerna clean --yes && for d in packages/*/dist; do if [ -d $d ]; then echo removing $d; rm -r $d; fi; done"
    }
}
